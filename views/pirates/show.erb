<h1>Pirate</h1>

<div class="pirate">
    <h3>Pirate Name: <%= @pirate.name %></h3><br>
    <h3>Weight: <%= @pirate.weight %></h3><br>
    <h3>Height: <%= @pirate.height %></h3><br>
</div>

<h2>Ship 1</h2>
<% @ships.each do |ship| %>
    <div class="ship">
        <p>Ship Name: <%= ship.name %></p><br>
        <p>Type: <%= ship.type %></p><br>
        <p>Booty: <%= ship.booty %></p><br>
    </div>
<%end%>

